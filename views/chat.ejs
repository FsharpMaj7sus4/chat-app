<!-- @format -->

<!DOCTYPE html>
<html
  lang="fa"
  dir="rtl"
>
  <head>
    <meta charset="UTF-8" />
    <meta
      http-equiv="X-UA-Compatible"
      content="IE=edge"
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"
    />
    <link
      rel="stylesheet"
      href="/stylesheets/chat.css"
    />
    <link
      rel="stylesheet"
      href="/stylesheets/bootstrap.rtl.min.css"
    />
    <link
      rel="stylesheet"
      href="/stylesheets/animate.css"
    />
    <title>Chat</title>
  </head>
  <body>
    <main class="main chats-main">
      <section class="chat-container col-lg-9">
        <header>
          <a
            href="chatList.html"
            class="return-btn"
          >
            <i class="bi bi-arrow-left-circle-fill fs-4 text-white fw-bold"></i>
          </a>
          <div class="header-container d-flex justify-content-between align-items-center">
            <div class="d-flex justify-content-start align-items-center">
              <a
                href="#"
                onclick="showRoomUsers()"
                class="d-flex"
              >
                <h3
                  class="fw-bold text-white"
                  id="currentRoomName"
                ></h3>
              </a>
              <!-- <div
								id="onlineStatus"
								class="user-status ms-2 rounded-circle bg-danger"
							></div> -->
            </div>
            <!-- <div>
							<a
								href="videoCall.html"
								class="btn videocall-btn d-flex justify-content-center align-items-center"
								><i class="bi me-1 d-flex h-100 bi-camera-video-fill"></i
								><span class="d-none d-md-none d-lg-inline-block">
									تماس تصویری</span
								></a
							>
						</div> -->
          </div>
        </header>
        <section
          class="chat-list"
          id="msgListSection"
        >
          <!--chat background-->
          <div class="chat-background"></div>
          <div id="messageList"></div>
        </section>
        <div
          id="fileUploadBox"
          class="editing-msg w-100 px-3 py-2 pb-4 align-items-start animate__animated animate__bounceInUp"
        >
          <button
            id="fileUploadBoxClose"
            class="btn btn-close mb-3"
            style="font-size: 12px"
          ></button>
          <div
            class="d-flex w-100 justify-content-center align-items-center"
            style="height: 20px"
          >
            <div class="progress w-100 h-100">
              <div
                title="uploadProgress"
                name="uploadProgress"
                id="progressBarElement"
                class="progress-bar progress-bar-striped progress-bar-animated bg-info"
                role="progressbar"
                aria-valuenow="0"
                aria-valuemin="0"
                aria-valuemax="100"
                style="width: 0%; height: 20px"
              >
                <center>
                  <span style="overflow: hidden; white-space: nowrap">
                    <span id="fileName"></span>
                    -
                    <span id="percentage"></span>
                  </span>
                </center>
              </div>
            </div>
          </div>
        </div>
        <div
          id="editingMsg"
          class="editing-msg w-100 px-3 py-2 pb-4 align-items-start animate__animated animate__bounceInUp"
        >
          <button
            id="editingMsgClose"
            class="btn btn-close mb-3"
            style="font-size: 12px"
          ></button>
          <div class="d-flex w-100 justify-content-center align-items-center">
            <label style="width: 100px">شما: </label>
            <input
              class="form-control mt-2 rounded-pill py-2"
              type="text"
              id="editText"
              disabled
            />
          </div>
        </div>
        <div
          id="commentMsg"
          class="comment-msg w-100 px-3 py-2 pb-4 align-items-start animate__animated animate__bounceInUp"
        >
          <button
            id="commentMsgClose"
            class="btn btn-close mb-3"
            style="font-size: 12px"
          ></button>
          <div class="d-flex w-100 justify-content-center align-items-center">
            <label
              id="commentedName"
              style="width: 100px"
            ></label>
            <input
              class="form-control mt-2 rounded-pill py-2"
              type="text"
              id="cmntText"
              disabled
            />
          </div>
        </div>

        <section
          class="message-send-box w-100 d-flex justify-content-center align-items-center d-none"
          id="inputSection"
          style="z-index: 100; height: auto"
        >
          <div class="sending-container d-flex justify-content-center align-items-center">
            <form
              id="inputForm"
              class="w-100"
            >
              <input
                id="input"
                type="text"
                class="form-control me-2"
                placeholder="پیام ..."
              />
            </form>
            <button
              id="sendButton"
              class="btn message-send-btn mx-2"
            >
              ارسال
            </button>
            <button
              class="btn notclicked btn-danger rounded-circle ms-2 d-flex justify-content-center align-items-center"
              style="width: 38px; height: 38px"
              id="fileUploadButton"
            >
              <i class="bi bi-paperclip d-flex first-btn"></i>
              <i class="bi bi-soundwave d-flex second-btn"></i>
            </button>
          </div>
        </section>
      </section>
      <section
        id="chatListSection"
        class="chats-show desktop-chat col-lg-3"
      >
        <h1
          style="vertical-align: middle"
          class="chats-list-head mb-0 fw-bold d-flex justify-content-end align-items-center p-2 text-white"
        >
          <button
            data-bs-toggle="modal"
            data-bs-target="#newRoomUserSelect"
            id="newRoom"
            type="button"
            class="btn btn-success btn-lg"
            style="margin-left: auto"
          >
            <i
              class="bi bi-plus"
              width="32"
              height="32"
            ></i>
          </button>
          Chats
        </h1>
        <ul
          id="chat-list"
          class="chats-list list-group d-flex flex-column justify-content-start align-items-end"
        ></ul>
      </section>
    </main>
    <!-- Modals -->
    <div
      class="modal fade"
      id="newRoomUserSelect"
      tabindex="-1"
      aria-labelledby="usersModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5
              class="modal-title"
              id="usersModalLabel"
            >
              دیگر اعضای گروه را انتخاب کنید:
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <ul
              class="list-group"
              id="allUsersList"
            ></ul>
            <p
              id="userSelectModalMsg"
              style="color: red"
            ></p>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              انصراف
            </button>
            <button
              id="createThisNewRoom"
              type="button"
              class="btn btn-primary"
            >
              ایجاد گروه
            </button>
          </div>
        </div>
      </div>
    </div>
    <div
      class="modal fade"
      id="newRoomNameSelect"
      tabindex="-1"
      aria-labelledby="roomNameLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5
              class="modal-title"
              id="roomNameLabel"
            >
              نام گروه را وارد کنید:
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <input
              type="text"
              class="form-control"
              id="newRoomName"
            />
            <p
              id="roomNameModalMsg"
              style="color: red"
            ></p>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              انصراف
            </button>
            <button
              id="confirmRoomName"
              type="button"
              class="btn btn-primary"
            >
              تایید
            </button>
          </div>
        </div>
      </div>
    </div>
    <div
      class="modal fade"
      id="roomUsersModal"
      tabindex="-1"
      aria-labelledby="roomUsersModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5
              class="modal-title"
              id="usersModalLabel"
            >
              اعضای گروه:
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <ul
              class="list-group"
              id="roomUsersList"
            ></ul>
          </div>
          <div class="modal-footer">
            <button
              onclick="showOtherUsers()"
              type="button"
              class="btn btn-primary"
            >
              افزودن عضو
            </button>
          </div>
        </div>
      </div>
    </div>
    <div
      class="modal fade"
      id="otherUsersModal"
      tabindex="-1"
      aria-labelledby="OtherUsersModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5
              class="modal-title"
              id="otherUsersModalLabel"
            >
              اعضای جدید گروه را انتخاب کنید:
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <ul
              class="list-group"
              id="otherUsersList"
            ></ul>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              انصراف
            </button>
            <button
              id="addUsersToRoom"
              type="button"
              class="btn btn-primary"
            >
              افزودن به گروه
            </button>
          </div>
        </div>
      </div>
    </div>
    <script src="/javascripts/bootstrap.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
      const jwt_token = "<%= token %>"
      const socket = io("localhost:3000", {
        query: {
          jwt_token,
        },
      })
      let userId = "<%= userId %>"
      userId = Number(userId)
      const userName = "<%= userName %>"
      const userPhone = "<%= userPhone %>"
    </script>
    <script src="/javascripts/chat.js"></script>
  </body>
</html>
